default: &default
  adapter: postgresql
  username: <%= ENV['DB_USERNAME'] %>
  password: <%= ENV['DB_PASSWORD'] %>
  host: <%= ENV['DB_HOSTNAME'] %>

development:
  <<: *default
  database: <%= ENV['DB_NAME'] || 'slovakia_development' %>

test:
  <<: *default
  database: povo_test<%= ENV['TEST_ENV_NUMBER'] %>

production:
  <<: *default
  database: <%= ENV['DB_NAME'] %>

staging:
  <<: *default
  database: <%= ENV['DB_NAME'] %>
